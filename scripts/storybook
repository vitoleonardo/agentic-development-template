#!/bin/sh
#
# Storybook Runner Script
#
# This script runs Storybook for component development and visual review.
# It detects whether Storybook is configured and provides actionable guidance.
#
# USAGE:
#   ./scripts/storybook         # Start Storybook dev server
#   ./scripts/storybook build   # Build static Storybook
#
# SETUP:
#   1. Install Storybook: npx storybook@latest init
#   2. Install React (if using): npm install react react-dom
#   3. Configure .storybook/ directory as needed
#

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if Storybook is installed
check_storybook() {
    if [ -d ".storybook" ] || [ -f "node_modules/.bin/storybook" ]; then
        return 0
    fi
    return 1
}

# Check if node_modules exists
check_dependencies() {
    if [ ! -d "node_modules" ]; then
        echo "${YELLOW}Warning: node_modules not found. Run 'npm install' first.${NC}"
        return 1
    fi
    return 0
}

# Print setup instructions
print_setup_instructions() {
    echo "${RED}Storybook is not configured.${NC}"
    echo ""
    echo "To set up Storybook for visual component development:"
    echo ""
    echo "  ${GREEN}1. Initialize Storybook:${NC}"
    echo "     npx storybook@latest init"
    echo ""
    echo "  ${GREEN}2. For React projects, ensure React is installed:${NC}"
    echo "     npm install react react-dom"
    echo "     npm install -D @types/react @types/react-dom"
    echo ""
    echo "  ${GREEN}3. Example components are in:${NC}"
    echo "     src/ui/components/example-card/"
    echo ""
    echo "  ${GREEN}4. After setup, run:${NC}"
    echo "     npm run storybook"
    echo ""
    echo "For other frameworks (Vue, Svelte, etc.), see:"
    echo "  https://storybook.js.org/docs/get-started/install"
    echo ""
}

# Main execution
main() {
    if ! check_storybook; then
        print_setup_instructions
        exit 1
    fi

    if ! check_dependencies; then
        exit 1
    fi

    # Parse command
    case "${1:-dev}" in
        build)
            echo "${GREEN}Building static Storybook...${NC}"
            npx storybook build
            ;;
        dev|"")
            echo "${GREEN}Starting Storybook dev server...${NC}"
            npx storybook dev -p 6006
            ;;
        *)
            echo "Usage: $0 [dev|build]"
            echo "  dev   - Start development server (default)"
            echo "  build - Build static Storybook"
            exit 1
            ;;
    esac
}

main "$@"
